{
  "name": "solid-sonner",
  "type": "module",
  "version": "0.2.2",
  "private": false,
  "packageManager": "pnpm@8.15.1",
  "description": "An opinionated toast component for Solid.",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "contributors": [],
  "homepage": "https://github.com/wobsoriano/solid-sonner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/solid-sonner.git"
  },
  "bugs": {
    "url": "https://github.com/wobsoriano/solid-sonner/issues"
  },
  "keywords": [
    "solid"
  ],
  "exports": {
    "solid": {
      "development": "./dist/dev.jsx",
      "import": "./dist/index.jsx"
    },
    "development": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/dev.js"
      }
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {},
  "files": [
    "dist"
  ],
  "browser": {},
  "scripts": {
    "dev": "vite serve dev",
    "build": "tsup",
    "dev:build": "vite build dev",
    "test": "playwright test",
    "prepublishOnly": "pnpm build",
    "update-deps": "pnpm up -Li",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "release": "bumpp && npm publish",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.43.1",
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.17",
    "bumpp": "^9.3.0",
    "concurrently": "^8.2.2",
    "copy-to-clipboard": "^3.3.3",
    "esbuild": "^0.20.0",
    "esbuild-plugin-solid": "^0.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-solid": "^0.13.1",
    "highlight.js": "^11.9.0",
    "jsdom": "^24.0.0",
    "solid-js": "^1.8.14",
    "tsup": "^8.0.1",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-solid": "^2.9.1"
  },
  "eslintConfig": {
    "plugins": [
      "solid"
    ],
    "extends": [
      "@antfu/eslint-config-ts",
      "plugin:solid/typescript"
    ]
  }
}
